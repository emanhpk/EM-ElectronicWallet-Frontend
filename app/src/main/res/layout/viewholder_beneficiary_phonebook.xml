<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/light_grey_bg4">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/textNameBeneficiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:text="@string/user_name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imageLogo"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textNumberAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/number_phone"
        android:textSize="16sp"
        android:textColor="@color/darkBlue"
        app:layout_constraintStart_toStartOf="@+id/textNameBeneficiary"
        app:layout_constraintTop_toBottomOf="@+id/textNameBeneficiary"/>

    <TextView
        android:id="@+id/textNameBanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/emb"
        android:textSize="16sp"
        android:textColor="@color/darkBlue"
        app:layout_constraintStart_toStartOf="@+id/textNameBeneficiary"
        app:layout_constraintTop_toBottomOf="@+id/textNumberAccount"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/imageMenuDots"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        app:srcCompat="@drawable/menu_dots_vertical"
        app:layout_constraintTop_toTopOf="@+id/textNameBeneficiary"
        app:layout_constraintEnd_toEndOf="parent"
        android:importantForAccessibility="no" />

</androidx.constraintlayout.widget.ConstraintLayout>